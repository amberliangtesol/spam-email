{
  "name": "spam-email-classifier",
  "version": "1.0.0",
  "description": "Spam email classifier with CLI and API interfaces",
  "scripts": {
    "preprocess": "python scripts/preprocess_emails.py",
    "train": "python scripts/train_spam_classifier.py",
    "train:recall": "python scripts/train_spam_classifier.py --config configs/recall_optimized_config.json",
    "eval": "python scripts/train_spam_classifier.py",
    "classify": "python scripts/predict_spam.py",
    "classify:csv": "python scripts/predict_spam.py --csv",
    "serve": "python app/api_server.py",
    "test": "pytest tests/",
    "test:unit": "pytest tests/test_preprocessing.py tests/test_training.py",
    "test:api": "pytest tests/test_api.py",
    "setup": "pip install -r requirements.txt",
    "clean": "rm -rf models/*.pkl reports/*.json",
    "tune:recall": "python scripts/tune_for_recall.py",
    "tune:recall:quick": "python scripts/tune_for_recall.py --quick",
    "analyze:features": "python scripts/analyze_features.py",
    "analyze:features:viz": "python scripts/analyze_features.py --visualize",
    "analyze:threshold": "python scripts/analyze_threshold.py",
    "analyze:threshold:plot": "python scripts/analyze_threshold.py --plot",
    "compare:models": "python scripts/compare_models.py",
    "compare:models:viz": "python scripts/compare_models.py --visualize",
    "analyze:errors": "python scripts/analyze_features.py",
    "sweep:threshold": "python scripts/threshold_sweep.py",
    "sweep:threshold:plot": "python scripts/threshold_sweep.py --plot",
    "tune:regularization": "python scripts/tune_regularization.py",
    "tune:regularization:all": "python scripts/tune_regularization.py --test-all",
    "compare:svc": "python scripts/compare_linearsvc.py",
    "analyze:cost": "python scripts/cost_sensitive_learning.py",
    "visualize:curves": "python scripts/visualize_curves.py",
    "visualize:all": "python scripts/visualize_curves.py --all",
    "benchmark": "python scripts/benchmark.py",
    "verify:phase3": "python scripts/verify_phase3.py",
    "train:precision": "python scripts/train_spam_classifier.py --config configs/precision_optimized_config.json",
    "dashboard": "streamlit run app/streamlit_app.py",
    "dashboard:dev": "streamlit run app/streamlit_app.py --server.runOnSave true",
    "dashboard:deploy": "echo 'Deploy to Streamlit Cloud via GitHub integration'",
    "verify:phase4": "python scripts/verify_phase4.py"
  },
  "keywords": [
    "spam",
    "classification",
    "machine-learning",
    "nlp"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {}
}